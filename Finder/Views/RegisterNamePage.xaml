<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Finder.Views.RegisterNamePage"
             xmlns:viewmodel="clr-namespace:Finder.ViewModels"
             x:DataType="viewmodel:RegisterNameViewModel"
             xmlns:model="clr-namespace:Finder.Models"
             Title="">
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <VerticalStackLayout Grid.Row="0">
        <Label Text="Mam na" FontSize="40" Margin="20,30,0,0" />
        <Label Text="imię" FontSize="40" Margin="20,0,0,0" />
        </VerticalStackLayout>
        <Entry Text="{Binding User.Email}" FontSize="25" Margin="20,30,20,0" Grid.Row="2" BackgroundColor="AliceBlue" />
        <Button Command="{Binding GoToRegisterEmailCommand}" Text="➔" BackgroundColor="Gray" HeightRequest="50" WidthRequest="50" Margin="0,20,0,0" Grid.Row="3" />
    </Grid>
</ContentPage>