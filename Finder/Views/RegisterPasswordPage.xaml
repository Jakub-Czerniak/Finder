<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Finder.Views.RegisterPasswordPage"
             xmlns:viewmodel="clr-namespace:Finder.ViewModels"
             x:DataType="viewmodel:RegisterPasswordViewModel"
             xmlns:model="clr-namespace:Finder.Models"
             Title="">

    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label Text="Moje hasło to" FontSize="40"/>
        <Entry Text="{Binding User.Password}" FontSize="20" Grid.Row="2" IsPassword="True"/>
        <Button Command="{Binding GoToRegisterGenderCommand}" Text="➔" BackgroundColor="White" HeightRequest="50" WidthRequest="50" Margin="0,20,0,0" Grid.Row="3" />
    </Grid>
</ContentPage>