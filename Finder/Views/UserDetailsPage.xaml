<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Finder.Views.UserDetailsPage"
             xmlns:viewmodel="clr-namespace:Finder.ViewModels"
             x:DataType="viewmodel:UserDetailsViewModel"
             xmlns:model="clr-namespace:Finder.Models"
             Title="">
    
    <VerticalStackLayout>
        <Image Source="{Binding User.Photo.Source}"/>
        <Label Text="{Binding User.Name}"/>
        <Label Text="O mnie" />
        <Label Text="{Binding User.AboutMe}"/>
        <Label Text="Moje zainteresowania" />
        

    </VerticalStackLayout>
</ContentPage>