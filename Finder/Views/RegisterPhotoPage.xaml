<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Finder.Views.RegisterPhotoPage"
             xmlns:viewmodel="clr-namespace:Finder.ViewModels"
             x:DataType="viewmodel:RegisterPhotoViewModel"
             xmlns:model="clr-namespace:Finder.Models"
             Title="">

    <Grid BackgroundColor="#DD5353">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label Text="Wybierz zdjęcie" FontSize="40" Margin="20,30,0,0"/>
        <Image Source="{Binding User.Photo.Source}" Grid.Row="1"/>
        <Button Command="{Binding AddPhotoCommand}" Text="Add photo" TextColor="White" Grid.Row="3" BackgroundColor="#B73E3E" Margin="20,0,20,0"/>
        <Button Command="{Binding GoToRegisterInterestsCommand}" Text="➔" TextColor="White" BackgroundColor="#B73E3E" HeightRequest="50" WidthRequest="50" Grid.Row="4" />
    </Grid>
</ContentPage>